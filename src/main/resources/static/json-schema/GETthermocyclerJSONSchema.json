{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "static/json-schema/GETthermocyclerJSONSchema.json",
    "title": "The ThermocyclerProfile GET Response Schema",
    "description": "The schema for the GET request response for thermocyclers",
    "base": "http://localhost:8080/api",
    "type": "object",
    "required": ["data"],
    "properties":{
        "data":{
            "type":"array",
            "description": "each element is a thermocycler object, the number of elements can range from 1, for a specific query, or all instances in the database.",
            "items":{
                "required": ["id","type","attributes","relationships","links"],
                "properties": {
                    "id":{
                        "type": "string",
                        "description": "Id reference to this thermocyclerprofile, generated by the application",
                        "examples": ["1"],
                        "pattern": "^(0|[1-9][0-9]*)$"
                   },        
                   "type":{
                       "const": "thermocyclerprofile",
                       "description": "The type of the object."
                   },
                   "attribute":{
			          	"allOf": [
			          		{ "$ref": "definitions/thermocycler.json" }
			          	]
                    },
                    "relationships":{
                        "type":"object",
                        "description": "contains the relations to this thermocyclerprofile",
                     "properties": {
                         "region":{
                             "type":"object",
                             "properties": {
                                 "links":{
                                     "properties": {
                                         "self":{
                                             "type": "string",
                                             "description": "URL link to this relationship's info",
                                             "examples": ["/api/thermocyclerprofile/1/relationships/region"]
                                         },
                                         "related":{
                                             "type":"string",
                                             "description": "URL link to the related region object",
                                             "examples": ["/api/thermocyclerprofile/1/region"]
                                         }
         
                                     }
                                 }
                             },
                             "links": [
                                 {
                                     "rel": "self",
                                     "href": "/thermocyclerprofile/{thermocycler_id}/relationships/region",
                                     "templateRequired": ["thermocycler_id"],
                                     "templatePointers": { "thermocycler_id":"/data/item/id"}
                                 },
                                 {
                                     "rel": "related",
                                     "href": "/thermocyclerprofile/{thermocycler_id/region",
                                     "templateRequired": ["thermocycler_id"],
                                     "templatePointers": { "thermocycler_id":"/data/item/id"},
                                     "targetHints": {
                                        "allow" : ["GET","PATCH", "DELETE"],
                                        "accept-patch": ["application/vnd.api+json"]
                                    },
                                    "targetSchema": {"$ref": "https://localhost:8080/api/schema/regionDto"}
                                 }
                             ]
                          },
                         "group":{
                             "type":"object",
                             "properties": {
                                 "links":{
                                     "properties": {
                                         "self":{
                                             "type":"string",
                                             "description": "URL link to this group relationship's info",
                                             "examples": ["/api/thermocyclerprofile/3/relationships/group"]
                                         },
                                         "related":{
                                             "type":"string",
                                             "description": "URL link to the related group object",
                                             "examples": ["/api/thermocyclerprofile/3/group"]
                                         }
                                     }
                                 }
                             },
                             "links": [
                                 {
                                     "rel": "self",
                                     "href": "/thermocyclerprofile/{thermocycler_id}/relationships/group",
                                     "templateRequired": ["thermocycler_id"],
                                     "templatePointers": { "thermocycler_id":"/data/item/id"}
                                 },
                                 {
                                     "rel": "related",
                                     "href": "/thermocyclerprofile/{thermocycler_id/group",
                                     "templateRequired": ["thermocycler_id"],
                                     "templatePointers": { "thermocycler_id":"/data/item/id"},
                                     "targetHints": {
                                        "allow" : ["GET","PATCH", "DELETE"],
                                        "accept-patch": ["application/vnd.api+json"]
                                    }
                                 }
                             ]
                         }
                     }
                 },
                 "links":{
                     "type":"object",
                     "description": "the link to this specific thermocycler profile",
                     "properties": {
                         "self":{
                             "type":"string",
                             "examples": ["/api/thermocyclerprofile/1"]
                         }
         
                     }
                 }
                }
            },
            "links": [{
                "rel": "item",
                "href": "/thermocycler/{thermocycler_id}",
                "templateRequired": ["thermocycler_id"],
                "templatePointers": { "thermocycler_id":"/data/item/id"},
                "targetHints": {
                    "allow" : ["GET","PATCH", "DELETE"],
                    "accept-patch": ["application/vnd.api+json"]
                }
            }]
        },
        "links":{
            "type":"object",
            "properties": {
                "first": {
                    "type":"string",
                    "description": "URL link to the first page of results",
                    "examples": ["/api/thermocyclerprofile?page[limit]=20"]
                },
                "last":{
                    "type":"string",
                    "description": "URL link to the last page of results",
                    "examples": ["/api/thermocyclerprofile?page[limit]=20"]
                },
                "next":{
                    "type":"string",
                    "description": "URL link to the next page of results",
                    "examples": ["/api/thermocyclerprofile?page[limit]=20&page[offset]=20"]
                },
                "prev":{
                    "type":"string",
                    "description": "URL link to the next page of results",
                    "examples": ["/api/thermocyclerprofile?page[limit]=20&page[offset]=20"]
                }
            }
        },
        "meta":{
            "properties": {
                "totalResourceCount":{
                    "type":"integer",
                    "description":"meta info describing how many elements are in the data array"
                }
            }
        }
    },
    "links": 
    [
        {
        "title": "link to the first pagination section",
        "rel": "first",
        "href": "{firstPageLink}",
        "templateRequired": ["firstPageLink"],
        "templatePointers": { "firstPageLink":"/links/first"}
    },
    {
        "title": "link to the last pagination section",
        "rel": "last",
        "href": "{lastPageLink}",
        "templateRequired": ["lastPageLink"],
        "templatePointers": { "lastPageLink":"/links/last"}
    },
    {
        "title": "link to the next pagination section",
        "rel": "next",
        "href": "{nextPageLink}",
        "templateRequired": ["nextPageLink"],
        "templatePointers": { "nextPageLink":"/links/next"}
    },
    {
        "title": "link to the prev pagination section",
        "rel": "prev",
        "href": "{prevPageLink}",
        "templateRequired": ["prevPageLink"],
        "templatePointers": { "prevPageLink":"/links/prev"}
    }
]


}
