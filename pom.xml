    </dependency>
    <dependency>
      <groupId>mysql</groupId>
      <artifactId>mysql-connector-java</artifactId>
    </dependency>
    
    <!-- Seqdb -->
    <dependency>
      <groupId>ca.gc.aafc</groupId>
      <artifactId>seqdb.dbi</artifactId>
      <version>3.19-SNAPSHOT</version>
