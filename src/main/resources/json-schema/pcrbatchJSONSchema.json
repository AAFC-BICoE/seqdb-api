{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://localhost:8080/api/schema/pcrbatchDto",
  "$base": "https://localhost:8080/api/",
  "title": "Single PcrBatch Schema",
  "type": "object",
  "required": [
    "data"
  ],
  "properties": {
    "data": {
      "type": "object",
      "required": [
        "id",
        "type",
        "attributes",
        "links"
      ],
      "properties": {
        "id": {
          "$comment": "The id will be displayed here to the user instead of as an attribute.",
          "type": "string",
          "description": "Id reference to this Pcr Batch, generated by the application.",
          "examples": [
            "1",
            "231"
          ],
          "pattern": "^(0|[1-9][0-9]*)$"
        },
        "type": {
          "const": "pcrBatch",
          "description": "The type of the object of the data being returned."
        },
        "attributes": {
          "$comment": "All of the attributes for the PcrBatch object can be found here.",
          "type": "object",
          "description": "The properties of the Pcr Batch object.",
          "required": [
            "name",
            "type",
            "plateSize"
          ],
          "properties": {
            "name": {
              "type": "string",
              "description": "The name given to the PcrBatch.",
              "maxLength": 50,
              "examples": [
                "BG_PCR026"
              ]
            },
            "type": {
              "type": "string",
              "description": "The sequencing technology used for the Pcr Batch.",
              "enum": [
                "FRAGMENT",
                "NGS",
                "ROUND2",
                "SANGER"
              ],
              "examples": [
                "SANGER",
                "NGS"
              ]
            },
            "plateSize": {
              "type": "string",
              "description": "The size of the plate used for the Pcr Batch.",
              "enum": [
                "PLATE_NUMBER_384",
                "PLATE_NUMBER_96"
              ],
              "examples": [
                "PLATE_NUMBER_96",
                "PLATE_NUMBER_384"
              ]
            }
          }
        }
      }
    }
  }
}