{
    "$id": "http://localhost:8080/json-schema/getManyPreLibraryPrepSchema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "The PreLibraryPrep GET Response Schema",
    "description": "The schema for the GET response to retrieve an array of PreLibraryPrep",
    "base": "http://localhost:8080/api",
    "type": "object",
    "required": ["data", "meta"],
    "$comment": "A request is retrieved into three different parts. The data, links and the meta data.",

    "properties": {

        "data": {
            "$comment": "This is where the data of the request is found, containing an array of all of the PreLibraryPrep.",
            "type": "array",
            "description": "Each element is a PreLibraryPrep object, the number of elements can range from 1, for a specific query, or all instances in the database.",
            "items": {

                "required": ["id", "type", "attributes", "relationships", "links"],
                "properties": {

                    "id": {
                        "$comment": "The id will be displayed here to the user instead of as an attribute.",
                        "type": "string",
                        "description": "Id reference to this PreLibraryPrep, generated by the application.",
                        "examples": ["1", "231"],
                        "pattern": "^(0|[1-9][0-9]*)$"
                    },

                    "type": {
                        "$comment": "The type of object the data will be returned.",
                        "const": "preLibraryPrep",
                        "description": "The type of data being returned."
                    },
                   "attribute": {
  			          	"allOf": [
  			          		  { "$ref": "definitions/prelibraryprep.json" }
  			          	  ]
                    },
                    "relationships": {
                        "$comment": "Contains all of the relationships that is possible with PreLibraryPrep objects.",
                        "type": "object",
                        "description": "Contains all of the relationships for a specific PreLibraryPrep.",
                        "properties": {

                            "protocol": {
                                "$comment": "Protocol relationship links",
                                "type": "object",
                                "description": "The related API call links to retrieve Protocol from this specific PreLibraryPrep.",
                                "properties": {

                                    "links": {
                                        "properties": {

                                            "self": {
                                                "type": "string",
                                                "description": "URL to receive all of the Protocol ids linked with this specific PreLibraryPrep.",
                                                "examples": ["/api/preLibraryPrep/1/relationships/protocol"]
                                            },

                                            "related": {
                                                "type": "string",
                                                "description": "URL link to to retrieve all of the Protocol objects linked with this specific PreLibraryPrep.",
                                                "examples": ["/api/preLibraryPrep/1/protocol"]
                                            }

                                        }
                                    }

                                },
                                "links": [
                                    {
                                        "rel": "self",
                                        "href": "/preLibraryPrep/{preLibraryPrep_id}/relationships/protocol",
                                        "templateRequired": ["preLibraryPrep_id"],
                                        "templatePointers": {"preLibraryPrep_id": "/data/item/id"}
                                    },
                                    {
                                        "rel": "related",
                                        "href": "/preLibraryPrep/{preLibraryPrep_id}/protocol",
                                        "templateRequired": ["preLibraryPrep_id"],
                                        "templatePointers": {"preLibraryPrep_id": "/data/item/id"},
                                        "targetHints": {
                                            "allow": ["GET", "PATCH", "DELETE"],
                                            "accept-patch": ["application/vnd.api+json"]
                                        },
                                        "targetSchema": {
                                            "$ref": "https://localhost:8080/api/schema/protocol"
                                        }
                                    }
                                ]
                            },
                            
                             "product": {
                                "$comment": "Product relationship links",
                                "type": "object",
                                "description": "The related API call links to retrieve Product from this specific PreLibraryPrep.",
                                "properties": {

                                    "links": {
                                        "properties": {

                                            "self": {
                                                "type": "string",
                                                "description": "URL to receive all of the Product ids linked with this specific PreLibraryPrep.",
                                                "examples": ["/api/preLibraryPrep/1/relationships/product"]
                                            },

                                            "related": {
                                                "type": "string",
                                                "description": "URL link to to retrieve all of the Products objects linked with this specific PreLibraryPrep.",
                                                "examples": ["/api/preLibraryPrep/1/product"]
                                            }

                                        }
                                    }

                                },
                                "links": [
                                    {
                                        "rel": "self",
                                        "href": "/preLibraryPrep/{preLibraryPrep_id}/relationships/product",
                                        "templateRequired": ["preLibraryPrep_id"],
                                        "templatePointers": {"preLibraryPrep_id": "/data/item/id"}
                                    },
                                    {
                                        "rel": "related",
                                        "href": "/preLibraryPrep/{preLibraryPrep_id}/product",
                                        "templateRequired": ["preLibraryPrep_id"],
                                        "templatePointers": {"preLibraryPrep_id": "/data/item/id"},
                                        "targetHints": {
                                            "allow": ["GET", "PATCH", "DELETE"],
                                            "accept-patch": ["application/vnd.api+json"]
                                        },
                                        "targetSchema": {
                                            "$ref": "https://localhost:8080/api/schema/product"
                                        }
                                    }
                                ]
                            }
                        }
                    },

                    "links": {
                        "$comment": "For each PreLibraryPrep, a set of links will be generated to see how you can access this object.",
                        "type": "object",
                        "description": "The link to this specific PreLibraryPrep object.",
                        "properties": {

                            "self": {
                                "type": "string",
                                "description": "The URL to retrieve all of the information for a specific PreLibraryPrep given the database id. ",
                                "examples": ["/api/preLibraryPrep/1"]
                            }

                        }
                    }

                },

                "links": [{
                    "$comment": "This is where the links are generated for each Protocol object.",
                    "rel": "item",
                    "href": "/preLibraryPrep/{preLibraryPrep_id}",
                    "templateRequired": ["preLibraryPrep_id"],
                    "templatePointers": {"preLibraryPrep_id": "/data/item/id"},
                    "targetHints": {
                        "allow": ["GET", "PATCH", "DELETE"],
                        "accept-patch": ["application/vnd.api+json"]
                    }
                }]

            }
        },

        "links": {
            "$comment": "Links for actions that can be done to the list of PreLibraryPrep that are retrieved.",
            "type":"object",
            "properties": {
                "first": {
                    "type":"string",
                    "description": "URL link to the first page of results",
                    "examples": ["/api/preLibraryPrep?page[limit]=20"]
                },
                "last":{
                    "type":"string",
                    "description": "URL link to the last page of results",
                    "examples": ["/api/preLibraryPrep?page[limit]=20"]
                },
                "next":{
                    "type":"string",
                    "description": "URL link to the next page of results",
                    "examples": ["/api/preLibraryPrep?page[limit]=20&page[offset]=20"]
                },
                "prev":{
                    "type":"string",
                    "description": "URL link to the next page of results",
                    "examples": ["/api/preLibraryPrep?page[limit]=20&page[offset]=20"]
                }
            }
        },

        "meta": {
            "$comment": "Metadata that comes along with the request.",
            "properties": {

                "totalResourceCount": {
                    "type": "integer",
                    "description": "Meta info describing how many elements are in the data array returned."
                }

            }
        }
        
    },

    "links": [
        {
            "title": "link to the first pagination section",
            "rel": "first",
            "href": "{firstPageLink}",
            "templateRequired": ["firstPageLink"],
            "templatePointers": { "firstPageLink":"/links/first"}
        },
        {
            "title": "link to the last pagination section",
            "rel": "last",
            "href": "{lastPageLink}",
            "templateRequired": ["lastPageLink"],
            "templatePointers": { "lastPageLink":"/links/last"}
        },
        {
            "title": "link to the next pagination section",
            "rel": "next",
            "href": "{nextPageLink}",
            "templateRequired": ["nextPageLink"],
            "templatePointers": { "nextPageLink":"/links/next"}
        },
        {
            "title": "link to the prev pagination section",
            "rel": "prev",
            "href": "{prevPageLink}",
            "templateRequired": ["prevPageLink"],
            "templatePointers": { "prevPageLink":"/links/prev"}
        }
    ]
}